<%- include('../partials/header.ejs') %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit Comment</h1>
        <div style="width: 30%; margin: 20px auto;">
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comments.id %>?_method=PUT" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Comment" value="<%= comments.body %>" name="content">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground_id %>">Go back</a>
        </div>
    </div>
</div>

<%- include('../partials/footer.ejs')%></div>