<%- include('../partials/header.ejs') %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add a comment to <%= campground.name %></h1>
        <div style="width: 30%; margin: 20px auto;">
            <form action="/campgrounds/<%= campground.id %>/comments" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Comment" name="comment[body]">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground.id %>">Go back</a>
        </div>
    </div>
</div>

<%- include('../partials/footer.ejs')%>