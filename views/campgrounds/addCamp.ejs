<%- include('../partials/header.ejs') %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Create a New Campground</h1>
        <div style="width: 30%; margin: 20px auto;">
            <form action="/campgrounds" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Name" name="name">
                </div>
                <div class="form-group">
                    <input type="number" class="form-control" placeholder="Price" name="price" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Image URL" name="image">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Description" name="description">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go back</a>
        </div>
    </div>
</div>

<%- include('../partials/footer.ejs')%>