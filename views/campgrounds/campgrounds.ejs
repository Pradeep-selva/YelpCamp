<%- include('../partials/header.ejs') %>

<div class="container">
        <header class="jumbotron">
                <div class="container">
                        <h1>Camp Sites</h1>
                        <h3>Visit our hand-picked campgrounds</h3>
                        <p>
                            <a href="/campgrounds/new" class="btn btn-primary btn-large">Add new camp</a>                                
                        </p>
                        
                </div>
        </header>
<br>
<div class="row text-center" style="display:flex; flex-wrap:wrap;">
        <%campgrounds.forEach((campground)=>{%>
                <div class="col-lg-4 col-sm-6">
                        <div class="thumbnail">
                                <img src="<%= campground.image %>" alt="">
                        
                                <div class="caption">
                                        <h3><%= campground.name %></h3>
                                </div>

                                <a href="/campgrounds/<%= campground.id %>" class="btn btn-primary">More info</a>
                        </div>
                </div>
        <%})%>
</div>

        
        


<%- include('../partials/footer.ejs')%>
</div>