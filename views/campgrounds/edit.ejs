<%- include('../partials/header.ejs') %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit campground - <%= campground.name %></h1>
        <div style="width: 30%; margin: 20px auto;">
            <form action="/campgrounds/<%= campground.id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Name" value="<%= campground.name %>" name="campground[name]">
                </div>
                <div class="form-group">
                    <input type="number" class="form-control" placeholder="Price" name="campground[price]" min="0.01" step="0.01" value="<%= campground.price %>">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Image URL" value="<%= campground.image %>" name="campground[image]">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Description" value="<%= campground.description %>"  name="campground[description]">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go back</a>
        </div>
    </div>
</div>

<%- include('../partials/footer.ejs')%>